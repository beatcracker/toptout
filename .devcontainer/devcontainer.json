{
	"name": "PowerShell + Node.js",
	"build": {
		"dockerfile": "Dockerfile",
	},
	"settings": {
		"terminal.integrated.shell.*": "/opt/powershell/pwsh",
		"powershell.powerShellAdditionalExePaths": [
			{
				"versionName": "latest",
				"exePath": "/opt/powershell/pwsh"
			}
		]
	},
	"extensions": [
		"ms-vscode.powershell"
	],
	"remoteUser": "node"
}